  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MailSender.lib\MailSender.lib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Avatar.ico" />
    <Resource Include="Resources\Media\letter2.png" />
    <Resource Include="Resources\Media\proger.png" />
    <Resource Include="Theme.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="WindowSuccessSend - Копировать.xaml.cs">
      <SubType>Code</SubType>
      <DependentUpon>WindowSuccessSend.xaml.cs</DependentUpon>
