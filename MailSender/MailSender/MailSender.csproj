  <ItemGroup>
    <None Remove="Avatar.ico" />
    <None Remove="Resources\Media\letter2.png" />
    <None Remove="Resources\proger.png" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="Theme.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.0.2" />
